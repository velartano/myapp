{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!
{% endblock %}

{% block body %}
	<!-- BreadCrumb Starts -->
	<section class="breadcrumb-main pb-0 pt-20" style="background-image: url(images/bg/bg2.jpg);">
		<div class="breadcrumb-outer">
			<div class="container">
				<div class="breadcrumb-content d-md-flex align-items-center pt-6">
					<h1 class="mb-0">
					{% if selected_cat != null %} 
						Catégorie ({{ selected_cat.getTypeCat() }}) 
						{% else %}
						Tous les biens
					{% endif %}
					</h1>
					<nav aria-label="breadcrumb">
						<ul class="breadcrumb">
							<li class="breadcrumb-item">
								<a>Home</a>
							</li>
							<li class="breadcrumb-item active" aria-current="page">
							{% if selected_cat != null %} 
						{{ selected_cat.getTypeCat() }}
						{% else %}
						Tous les biens
					{% endif %}</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
		<div class="dot-overlay"></div>
	</section>
	<!-- BreadCrumb Ends -->

	<!-- blog starts -->
	<section class="blog trending">
		<div class="container">
			<div class="listing-main listing-main1">
				{{ form_start(form, {'attr' : {'class' : 'form-find d-lg-flex justify-content-between p-4 bg-grey borderall mb-4'}}) }}

				<div class="form-group me-2">
					<div class="input-box">
						{{form_widget(form.titre)}}
					</div>
				</div>
				<div class="form-group me-2">
					<div class="input-box">
						{{form_widget(form.prix)}}
					</div>
				</div>
				<div class="form-group me-2">
					<div class="input-box">
						{{form_widget(form.surface)}}

					</div>
				</div>
				<div class="form-group me-2">
					<div class="input-box">
						{{form_widget(form.localisation)}}
					</div>
				</div>
				<div class="form-group text-center w-100">
					{{form_widget(form.Rechercher, {'attr' : {'class' : 'nir-btn w-100', 'onClick' : 'this.form.submit();'}})}}
				</div>
				{{ form_end(form) }}
				<div class="trend-box">
					<div class="list-results d-flex align-items-center justify-content-between">
						<div class="list-results-sort">
							<p class="m-0">Showing 1-5 of 80 results</p>
						</div>

					</div>
					<div class="row">
						{% for bien in biens %}
							<div class="col-lg-4 col-md-6 mb-4">
								<div class="trend-item box-shadow rounded">
									<div class="trend-image">
										<img src="{{ vich_uploader_asset(bien ,'imageFile')}}" alt="image">
										<div class="trend-meta d-flex align-items-center justify-content-between box-shadow rounded">
											<div class="entry-author">
												<img src="{{ vich_uploader_asset(bien ,'imageFile')}}" alt="" class="rounded-circle me-1">
												<span>{{bien.getCodePostal()}}</span>
											</div>
											<a href="grid-leftfilter.html" class="tags bg-theme2 white px-3 py-1">{{bien.status}}</a>
										</div>
									</div>
									<div class="trend-content p-4">
										<h5 class="theme">{{bien.getTitre()}}</h5>
										<h4>
											<a href="detail-rightside.html">{{bien.getDescription()}}</a>
										</h4>
										<div class="entry-meta d-flex align-items-center justify-content-between border-b pb-1 mb-2">
											<div class="entry-author">
												<p>Prix<span class="d-block theme fw-bold">{{bien.getPrix()}}
														€</span>
												</p>

											</div>
											<div class="entry-metalist d-flex align-items-center">
												<ul>
													<li class="me-2">
														<i class="fa fa-eye"></i>
													</li>
													<li class="me-2">
														<a href="{{ path('app_bien_add_to_favs', {'id' : bien.id}) }}">
															<i class="fa fa-heart" {% if favoris != null and bien.id in favoris %} style="color: red;" {% endif %}></i>
														</a>
													</li>
												</ul>
											</div>
										</div>
										<p class="mb-0">{{bien.getSurface()}}</p>

									</div>
									<ul class="d-flex align-items-center justify-content-between bg-grey p-3 px-4">
										<li class="me-2">
											<i class="fa fa-location-arrow"></i>
										</li>
										<li class="me-2">
											<i class="fa im-icon-Post-Mail"></i>
											{{bien.getCodePostal()}}</li>

									</ul>
								</div>
							</div>

						{% endfor %}
					</div>
					<div class="pagination-main text-center">
						<ul class="pagination">
							<li>
								<a href="#">
									<i class="fa fa-angle-double-left" aria-hidden="true"></i>
								</a>
							</li>
							<li class="active">
								<a href="#">1</a>
							</li>
							<li>
								<a href="#">2</a>
							</li>
							<li>
								<a href="#">3</a>
							</li>
							<li>
								<a href="#">4</a>
							</li>
							<li>
								<a href="#">
									<i class="fa fa-angle-double-right" aria-hidden="true"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- blog Ends -->


	<!-- Back to top start -->
	<div id="back-to-top">
		<a href="#"></a>
	</div>
	<!-- Back to top ends -->

	<!-- search popup -->
	<div id="search1">
		<button type="button" class="close">×</button>
		<form>
			<input type="search" value="" placeholder="type keyword(s) here"/>
			<button type="submit" class="btn btn-primary">Search</button>
		</form>
	</div>


{% endblock %}
