{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% use '@EasyAdmin/symfony-form-themes/bootstrap_base_layout.html.twig' %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Bienvenue Ã  Admin' %}

{% block main %}
	<div class="container">
		<div class="row">
			<div class="col-6-alert-info">

				<span class="display-3">{{countBien['value'] }}</span>bien
			</div>
			<div class="col-6-alert-success">
				<span class="display-3">{{countContact['value'] }}</span>contact
			</div>
			<div class="col-6-alert-success">
				<span class="display-3">{{countCategorie['value'] }}</span>categories
			</div>
			<div class="col-6-alert-success">
				<span class="display-3">{{message['value'] }}</span>Message
			</div>
		</div>
		<div class="col-6-alert-success">
			<span class="display-3">{{fav['value'] }}</span>Bien par favoris
		</div>
		<div class="row">
			{% for  favor in fav %}
				<div class="col-12">
					<ul class="list-group">
						<li class="list-group-item d-flex justify-content-between align-items-center">
							{{favor}}
							<span class="badge badge-primary badge-pill">14</span>
						</li>

					</ul>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
