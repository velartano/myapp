								</div>
								{{ form_end(formcontact )}}


							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- contact Ends -->
	<!-- content-line start -->
	<div class="content-line m-0">
		<div class="content-line-inner bg-theme2 pb-6 pt-6 p-5">
